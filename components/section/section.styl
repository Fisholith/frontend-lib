.section
	@extend .well-row

	/**
	 * Nav only section
	 */
	&.nav-only
		padding-top: 0
		padding-bottom: 0

	/**
	 * Header section
	 */
	header&
		@extend .fill-dark
		padding-bottom: 0

		&.no-nav
			@extend .well-row

		h1
			margin-top: 0
			margin-bottom: 0

	/**
	 * Footer section
	 */
	footer&
		@extend .fill-darkest

	/**
	 * Thin section
	 */
	&.section-thin
		padding: ($grid-gutter-width / 2)

		@media $media-xs
			padding: ($grid-gutter-width-xs / 2)

.section-header
	margin-top: 0

.section-header-controls
	float: right

	h1.section-header &
		margin-top: 10px

	h2.section-header &
		margin-top: 5px

	> .i-button
		@extend .i-button.light
		vertical-align: top  // Force them at the top.

$zindex-backdrop ?= 20

.backdrop-active
	overflow: hidden !important

.backdrop
	position: absolute

	// If it's attached to the body directly (the default) just use a fixed
	// position so that it contains the whole screen.
	body > gj-backdrop > &
		position: fixed

	top: 0
	right: 0
	bottom: 0
	left: 0
	background-color: $black
	user-select: none
	z-index: $zindex-backdrop
	opacity: 0

	&.in
		opacity: 0.8

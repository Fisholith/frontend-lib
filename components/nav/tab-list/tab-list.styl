@require '~styles/variables'
@require '../../../stylus/common/mixins'

.tab-list
	clearfix()
	margin-bottom: $line-height-computed
	padding-left: $line-height-computed
	padding-right: $line-height-computed
	border-bottom: 2px solid $gray-darker

	@media $media-xs
		overflow-x: auto
		overflow-y: hidden
		white-space: nowrap

	ul
		display: inline-block
		margin: 0
		padding: 0

		@media $media-xs
			float: none !important

		> li
			display: inline-block
			margin: 0

			> a
				display: inline-block
				padding: $tab-list-padding-v $tab-list-padding-h
				margin: 0 3px
				margin-bottom: -2px
				cursor: pointer
				border: 2px solid $black
				font-weight: bold
				color: $black

				// Don't allow to select the text when clicking on a tab.
				user-select: none

				&:hover
					background-color: $gray-lightest

				&.active
					border-bottom: 0
					background-color: $white
					padding-bottom: 9px

	&-centered
		text-align: center
		margin-left: 0

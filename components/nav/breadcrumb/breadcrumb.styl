.breadcrumb

	ul
		@extend .list-unstyled, .clearfix
		font-family: $font-family-heading
		margin-bottom: 0

		> li
			float: left
			padding: 0
			margin-bottom: 0

			> a
			> span
				display: inline-block
				color: $gray-dark

				&.active
					color: $black
					font-weight: bold

				&:hover
					text-decoration: none

	&-tag
		display: block
		color: $text-muted
		font-family: $font-family-base
		font-size: $font-size-tiny
		text-transform: lowercase
		font-weight: normal

	&-separator
		color: $gray-light
		margin: 2px 12px 0 8px

		// Just to make it look a tad nicer?
		position: relative
		top: 1px

	&.dark-variant
		ul > li
			> a
			> span
				color: $gray-light

				&.active
					color: $white

@require '~styles/variables'

.auth-form

	.form-group
		// @extend .anim-fade-in-up
		margin: 0

	.form-control

		// Bigger form controls.
		height: 40px

		// Scrunch up the form controls so their borders overlap.
		margin-top: -1px

		// Don't change the color of the border on focus.
		&:focus
			border-color: $gray-lighter

.auth-line-thru
	position: relative
	display: block
	margin-top: $line-height-computed
	margin-bottom: $line-height-computed
	width: 100%
	text-align: center

	&::before
	&::after
		content: ''
		position: absolute
		top: 50%
		margin-top: 1px
		height: 1px
		line-height: 1px
		border-bottom: 1px solid rgba( $black, 0.2 )

	&::before
		left: 0
		right: 50%
		margin-right: 40px

	&::after
		left: 50%
		right: 0
		margin-left: 40px

@require '~styles/variables'

.media-bar-lightbox-item
	display: inline-block
	width: 80%
	vertical-align: top

	// Browsers will allow you to drag the image somewhere to paste the URL.
	// Turn that off since we want to enable dragging to switch images.
	img
		pointer-events: none

	&-embed
		position: relative

		img, iframe
			display: block
			margin: 0 auto
			border-radius: $border-radius-base

	&-caption
		padding-top: $font-size-base
		text-align: center
		color: $white
		width: 900px
		max-width: 80%
		margin: 0 auto
		white-space: normal

		h4
			margin-top: 0
			color: $white
			font-weight: 300

		a
			color: $gj-blue

			&:hover
				color: $gj-pink

@require '~styles/variables'

.comment-video-thumbnail
	position: relative
	margin-bottom: $grid-gutter-width-xs

	@media $media-sm-up
		margin-bottom: $grid-gutter-width

	&-inner
		display: block

		img
			border-radius: $border-radius-base

	.play-button-overlay
		display: none

	&:hover
		.play-button-overlay
			display: block

	&-game
	&-user
		display: block
		position: absolute
		bottom: 5px
		border: 2px solid $gray-light
		border-radius: $border-radius-base
		padding: 2px
		background-color: $gray-darkest

		>>> img
			border-radius: ($border-radius-base / 2)

		&:hover
			border-color: $white

	&-game
		left: 5px
		width: 50px

		@media $media-md-up
			width: 75px

	&-user
		right: 5px
		width: 35px
		height: 35px

@require '~styles/variables'
@require '../../../stylus/common/mixins'

.message-thread-item

	// Will show the avatar on mobile.
	>>> .timeline-list-item-bubble
		@media $media-xs
			display: block
			float: left
			margin-top: 6px // Align it better with the text to the right.
			margin-left: ($grid-gutter-width-xs / 2)
			margin-right: ($grid-gutter-width-xs / 2)
			width: $button-line-height
			height: $button-line-height
			line-height: $button-line-height
			border: 0

	&-meta
		margin-bottom: 1em

	&-byline
		text-overflow()

	&-author
		margin-right: 2px

		a
			font-weight: bold

	&-meta-sub

		a
			margin-right: 2px

		.tag
			margin-right: 5px

	&-replies

		&-split
			margin-left: -(($timeline-list-icon-size / 2) + $timeline-list-avatar-margin)
			border-top: 2px solid $gray-lighter

			@media $media-xs
				margin-right: -($grid-gutter-width-xs / 2)

		// Target the div within so that the slot doesn't take up any space until
		// there's content within it
		& > div
			margin-bottom: $line-height-computed
			margin-left: ($timeline-list-icon-size / 2) - $timeline-list-avatar-margin

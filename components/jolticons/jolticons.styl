$in-webpack ?= false
$gj-jolticon-lib ?= '/lib/gj-lib-client/components/jolticons/';

// When in webpack we need to do relative URL.
if ( $in-webpack ) {
	$gj-jolticon-lib = '.' + $gj-jolticon-lib
}

$jolticon-size = 16px

@font-face
	font-family: 'jolticons'
	src: url( $gj-jolticon-lib + '/jolticons.eot' )
	src: url( $gj-jolticon-lib + '/jolticons.eot?#iefix' ) format('embedded-opentype'), url( $gj-jolticon-lib + '/jolticons.woff' ) format('woff'), url( $gj-jolticon-lib + '/jolticons.ttf' ) format('truetype'), url( $gj-jolticon-lib + '/jolticons.svg#jolticon' ) format('svg')
	font-weight: normal
	font-style: normal

.jolticon
	display: inline-block
	margin: 0 2px
	font-family: 'jolticons' !important
	speak: none
	font-style: normal
	font-weight: normal
	font-variant: normal
	text-transform: none
	line-height: 1

	// -webkit-font-smoothing: none
	// -moz-osx-font-smoothing: none
	// text-rendering: geometricPrecision

	font-size: $jolticon-size
	cursor: default

.jolticon.middle
	vertical-align: middle

a .jolticon
	cursor: pointer

.jolticon.big
.jolticon-2x
	margin: 0 4px
	font-size: $jolticon-size * 2

.jolticon-3x
	margin: 0 6px
	font-size: $jolticon-size * 3

.jolticon-4x
	margin: 0 8px
	font-size: $jolticon-size * 4

.jolticon.inactive
	color: #999

.jolticon.active
	color: $gj-blue

.jolticon.warning
	color: $gj-pink !important

@require '~styles/variables'
@require './../../../../stylus/common/mixins.styl'

.-spinner
	position: absolute
	top: 0
	right: 0
	bottom: 0
	left: 0
	content: ''
	background-color: rgba($gray-dark, 0.7)
	z-index: 2
	display: flex
	align-items: center
	justify-content: center

	.loading
		color: $white
		font-weight: bold

.form-group
	margin-bottom: $font-size-base

>>> label
	font-family: $font-family-base !important

.amount-input
	position: relative
	display: inline-block

	input
		display: inline-block
		width: 120px
		margin-right: 10px
		padding-left: 25px

	&-currency
		position: absolute
		content: '$'
		top: 7px
		left: 10px
		color: $gray-light
		z-index: 2

.saved-card
.saved-card-more
	clearfix()
	display: inline-block
	padding-left: 20px
	padding-right: 20px
	padding-top: 8px
	padding-bottom: 8px
	border: 2px solid $black
	border-radius: $border-radius-base
	height: 40px + (@padding-top * 2) + (2px * 2)
	width: 100%
	margin-bottom: $line-height-computed
	vertical-align: middle
	cursor: pointer

	&:hover
		background-color: $black
		color: $gj-green

	&.disabled
		pointer-events: none
		opacity: 0.5

.saved-card-more
	line-height: 40px
	padding-left: 10px
	padding-right: 10px

	.jolticon
		vertical-align: middle
		color: $gj-green !important

.saved-card-label
	font-size: $font-size-tiny
	text-transform: uppercase

.saved-card-avatar
	float: left
	width: 40px

.saved-card-content
	margin-left: 50px

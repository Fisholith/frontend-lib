@require '~styles/variables'
@require '~styles-lib/mixins'

$meter-blip-count = 10

.meter-blip
	theme-prop('background-color', 'lighter')
	float: left
	display: inline-block
	vertical-align: bottom
	margin-right: 1px
	width: 2px
	overflow: hidden

	.meter-big &
		width: 4px
		margin-right: 2px

.meter-blip-filled
	theme-prop('background-color', 'gray')

.meter-dark
	.meter-blip
		theme-prop('background-color', 'light')

	.meter-blip-filled
		theme-prop('background-color', 'lightest')

for i in 1 .. $meter-blip-count
	.meter-blip:nth-child({i})
		height: 10px

		&:nth-child(odd)
			margin-top: 5px
			height: 5px

		.meter-big &
			height: 20px

			&:nth-child(odd)
				margin-top: 10px
				height: 10px
